          tr
            td= "Paper Publication"
            td= x.title
            td= x.journal
            td= x.publicationYear
            td= x.issnNo
            td
              form(id="paperPublicationForm" action="/updatePaperPublicationPage" method="post")
                input(type="hidden" name="paperPublicationData" id="paperPublicationField")
                input(type="hidden" name="paperPublicationIndex" id="paperPublicationIndex")
              button#submit(type="submit" onclick=`updatePaperPublication('${JSON.stringify(x)}','${paperPublicationIndex}')`) Update 
              - paperPublicationIndex = paperPublicationIndex + 1
if userdata.citation !== -1
  .tableDiv
    - var citationIndex = 1
    table#table 
      tr 
        th Citation Records  
        th Title
        th Indexing
        th Year
        th Cited By
        th Update
        
        each x in userdata.citation
          tr
            td= "Citation"
            td= x.title
            td= x.indexing
            td= x.year
            td= x.citedBy
            td
              form(id="citationForm" action="/updateCitationPage" method="post")
                input(type="hidden" name="citationData" id="citationField")
                input(type="hidden" name="citationIndex" id="citationIndex")
              button#submit(type="submit" onclick=`updateCitation('${JSON.stringify(x)}','${citationIndex}')`) Update 
              - citationIndex = citationIndex + 1

