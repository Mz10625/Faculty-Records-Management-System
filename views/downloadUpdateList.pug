            td
              form(id="confForm" action="/updateConferencePage" method="post")
                input(type="hidden" name="conferenceData" id="conferenceDataField")
                input(type="hidden" name="confIndex" id="confIndex")
              button#submit(type="submit" onclick=`updateConference('${JSON.stringify(x)}','${confIndex}')`) Update 
              - confIndex = confIndex + 1
if userdata.paperPublication !== -1
  .tableDiv
    - var paperPublicationIndex = 1
    table#table 
      tr 
        th Paper Publication Records  
        th Title
        th Journal
        th Year
        th ISSN or e-ISSN Number
        th Update
        
