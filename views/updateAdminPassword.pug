doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Update Password
  link(rel='stylesheet' href='updateAdminPassword.css')
.container0
  #clg_logo
    img(src='images/logo1.png' alt='logo')
  .first-rectangle
    h2(style='color: orange;') Kolhapur Institute of Technology&apos;s
    h2 College of Engineering (Autonomous) Kolhapur
  .action__btns#homeBtn
    a.login(href='adminHome') Home
.container
  .title Update Password
  .content
    form(method='post' action="updatePassword" id="form")
      .user-details
        .input-box
          span.details Username
          input(type='text' name='username' placeholder="Username" required='')
        .input-box
          span.details Password
          input(type='text' name='currentPassword' placeholder="Current Password" required='')
        .input-box
          span.details New Password
          input#newPass(type='text' name='newPassword' placeholder="New Password" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9]).{4,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 4 characters" required='')
        .input-box
          span.details Confirm New Password
          input#confirmNewPass(type='text' name='confirmNewPassword' placeholder="Confirm New Password" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9]).{4,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 4 characters" required='')
          input(type="hidden" name="token" id="updatePasswordToken")
      .action__btns(align='center')
        button#submitBtn Submit 

  script(src="updateAdminPassword.js") 
